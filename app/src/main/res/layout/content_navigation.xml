<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutPrincipal"
    android:background="@color/colorWhite">

    <Button
        android:text="@string/nav_all_zones"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/btnZones"
        android:drawableLeft="@drawable/ic_menu_machine_status"
        android:backgroundTint="@color/colorWhite"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.66" />

    <Button
        android:text="@string/nav_work_orders"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/btnOT"
        android:drawableLeft="@drawable/ic_menu_work_order"
        android:backgroundTint="@color/colorWhite"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnZones"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:text="@string/nav_instructions"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/btnInstructions"
        android:drawableLeft="@drawable/ic_menu_instructions"
        android:backgroundTint="@color/colorWhite"
        android:textStyle="normal|bold"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/btnOT"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="@string/nav_settings"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/btnSettings"
        android:drawableLeft="@drawable/ic_settings"
        android:backgroundTint="@color/colorWhite"
        android:textStyle="normal|bold"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAlignment="textStart"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnInstructions" />

    <Button
        android:text="@string/nav_logout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/btnLogout"
        android:drawableLeft="@drawable/ic_logout"
        android:backgroundTint="@color/colorWhite"
        android:textStyle="normal|bold"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAlignment="textStart"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings" />

    <ImageView
        android:layout_width="306dp"
        android:layout_height="163dp"
        app:srcCompat="@drawable/logo_vectorized"
        android:id="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.47" />

</android.support.constraint.ConstraintLayout>