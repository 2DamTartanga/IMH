<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tartanga.dam.imhandroid.activities.SettingsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/header_account_settings"
        android:background="@color/cardview_shadow_start_color">

        <TextView
            android:text="Account Settings"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/txtvUsername"
        android:text="@string/username"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvTitle"
        android:textSize="12sp" />

    <TextView
        android:text="@string/currenPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/txtvCurrentPass"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvUsername"
        android:textSize="12sp" />

    <TextView
        android:text="@string/newPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="116dp"
        android:id="@+id/textView"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/currentPass"
        android:textStyle="normal|bold"
        android:textSize="13sp"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:text="@string/btnChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChangePass"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/newPass"
        android:elevation="0dp"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/currentPass"
        android:hint="@string/edCurrenPass"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvCurrentPass"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:fontFamily="sans-serif"
        android:layout_width="240dp"
        android:textSize="12sp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="240dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newPass"
        android:hint="@string/edNewPass"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textAlignment="center" />

    <TextView
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvTitle"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/header_account_settings"
        android:textAllCaps="false"
        android:fontFamily="sans-serif" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        android:background="@color/cardview_shadow_start_color"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePass"
        android:id="@+id/constraintLayout">

        <TextView
            android:text="Preferences"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:elevation="0dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:text="Choose language: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/spinner"
        android:layout_marginTop="8dp" />

    <Spinner
        android:layout_width="171dp"
        android:layout_height="33dp"
        tools:layout_editor_absoluteY="406dp"
        tools:layout_editor_absoluteX="141dp"
        android:id="@+id/spinner"
        android:entries="@array/languages" />

</android.support.constraint.ConstraintLayout>
