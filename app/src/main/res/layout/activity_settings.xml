<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tartanga.dam.imhandroid.activities.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/txtvUsername"
        android:text="@string/username"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvTitle" />

    <TextView
        android:text="@string/currenPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/txtvCurrentPass"
        android:textStyle="normal|italic"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvUsername" />

    <TextView
        android:text="@string/newPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/textView"
        android:textStyle="normal|italic"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/currentPass" />

    <Button
        android:text="@string/btnChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChangePass"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/newPass" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/currentPass"
        android:hint="@string/edCurrenPass"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtvCurrentPass"
        android:textAlignment="textStart"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/newPass"
        android:hint="@string/edNewPass"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/txtvTitle"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

</android.support.constraint.ConstraintLayout>
