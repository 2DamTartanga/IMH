            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Navegador"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.WorkZonesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.WorkOrderCardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.MachinesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.DetailsWorkOrderActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SendWorkOrderActivity"
            android:screenOrientation="portrait"></activity>
